{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Forex": {
    "ApiKey": "",
    "ApiBaseUrl": "https://api.apilayer.com/exchangerates_data"
  },
  "IpRateLimiting": { 
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/transactions",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "GET:/api/transactions",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "GET:/api/transactions/*",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ],
    "IpWhitelist": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
